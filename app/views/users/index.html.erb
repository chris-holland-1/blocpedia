<h1> Blocipedia Users </h1>

<div class="row">
  <div class="col-md-8">
    <% @users.each do |user| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            Email: <%= user.email %> <br>Role:  <%= user.role.capitalize %>
          </h4>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% content_for :analytic do %>
  <script type="text/javascript"> $(document).ready(function(){ blocmetrics.report("User Index Visit"); }); </script>
<% end %>
